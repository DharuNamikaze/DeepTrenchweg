---
import "../pages/_index.css";
import { mlConcepts, depthMarkers, zones } from "../data/mlconcepts.js";
---

<style>
  /* Wave animation: horizontal scroll effect */
  @keyframes wave {
    0% {
      background-position: 0% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  /* Slower wave for layering effect */
  @keyframes wave-slow {
    0% {
      background-position: 0% center;
    }
    125% {
      background-position: 100%;
    }
    100% {
      background-position: 200% center;
    }
  }

  /* Container for wave effect */
  .wave-border {
    position: relative;
    top: -75px;
    overflow: visible;
  }

  /* Wave animation div */
  .wave-border::before {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 100px;
    background-image: url('data:image/svg+xml, <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path d="M0,40 Q300,10 600,40 T1200,40 L1200,120 L0,120 Z" fill="%2317bdff"/></svg>');
    background-repeat: repeat-x;
    background-size: 600px 120px;
    animation: wave-slow 8s linear infinite;
    z-index: 5;
  }

  /* Ocean container styling */
  .ocean-container {
    position: relative;
    width: 100%;
    min-height: 11000px; /* Total depth */
  }

  /* Depth markers styling */
  .depth-marker {
    position: absolute;
    left: 20px;
    font-family: monospace;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
    font-weight: bold;
    z-index: 10;
    pointer-events: none;
  }

  /* ML Concept container */
  .ml-concept {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
    cursor: pointer;
    z-index: 20;
  }

  .ml-concept.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Concept positioning - scattered horizontally */
  .ml-concept:nth-child(3n + 1) {
    left: 15%;
  }

  .ml-concept:nth-child(3n + 2) {
    left: 50%;
    transform: translateX(-50%) translateY(30px);
  }

  .ml-concept.visible:nth-child(3n + 2) {
    transform: translateX(-50%) translateY(0);
  }

  .ml-concept:nth-child(3n + 3) {
    right: 15%;
  }

  /* Image container with glow effect */
  .concept-image-container {
    position: relative;
    border-radius: 12px;
    padding: 10px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .ml-concept:hover .concept-image-container {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.05);
  }

  /* Image sizing based on importance */
  .ml-concept.large .concept-image-container {
    width: 150px;
    height: 150px;
  }

  .ml-concept.medium .concept-image-container {
    width: 100px;
    height: 100px;
  }

  .ml-concept.small .concept-image-container {
    width: 60px;
    height: 60px;
  }

  .concept-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 0 8px rgba(135, 206, 235, 0.3));
  }

  /* Concept info card */
  .concept-info {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 15px;
    padding: 15px 20px;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    min-width: 250px;
    max-width: 350px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 100;
  }

  .ml-concept:hover .concept-info {
    opacity: 1;
  }

  .concept-info h3 {
    margin: 0 0 8px 0;
    font-size: 16px;
    font-weight: 600;
    color: #87ceeb;
  }

  .concept-info p {
    margin: 0;
    font-size: 13px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
  }

  .concept-category {
    display: inline-block;
    margin-top: 8px;
    padding: 3px 8px;
    font-size: 11px;
    background: rgba(135, 206, 235, 0.2);
    color: #87ceeb;
    border-radius: 4px;
  }

  /* Depth indicator - fixed position */
  .depth-indicator {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 15px 25px;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    font-family: monospace;
    font-size: 18px;
    color: #87ceeb;
    font-weight: bold;
    z-index: 1000;
  }

  /* Zone labels */
  .zone-label {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 32px;
    font-weight: bold;
    color: rgba(255, 255, 255, 0.15);
    text-transform: uppercase;
    letter-spacing: 4px;
    pointer-events: none;
    z-index: 5;
  }

  /* Floating animation for concepts */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .ml-concept.visible {
    animation: float 6s ease-in-out infinite;
  }

  .ml-concept.visible:nth-child(2n) {
    animation-delay: 1s;
    animation-duration: 7s;
  }

  .ml-concept.visible:nth-child(3n) {
    animation-delay: 2s;
    animation-duration: 8s;
  }
</style>

<main>
  {/* Hero section: gradient background with navigation and title */}
  <section class="bg-linear-to-t to-amber-100 from-amber-50 h-[82vh]">
    {/* Navigation links */}
    <nav class="flex justify-between p-2">
      <a
        href="https://dharuportfolio.netlify.app/"
        target="_blank"
        class="hover:underline"
        >Nami
      </a>
      <a
        href="https://abinesh-mathivanan.vercel.app/"
        target="_blank"
        class="hover:underline"
        >Beens
      </a>
    </nav>

    {/* Centered title and subtitle */}
    <div class="flex flex-col justify-center items-center pt-[36vh]">
      <h1 class="font-bold text-5xl">The Deep Trench</h1>
      <h5 class="p-3 font-medium">by Beens & Nami</h5>
    </div>
  </section>

  {/* Content section with gradient background */}
  <div class="wave-border"></div>
  <section
    class="min-h-screen relative"
    style="background: linear-gradient(180deg, #17bdff 0%, #1e3a8a 50%, #000000 100%);"
  >
    {/* Ocean container with all concepts */}
    <div class="ocean-container">
      {/* Zone labels */}
      {
        zones.map((zone) => (
          <div class="zone-label" style={`top: ${zone.start + 100}px;`}>
            {zone.name} 
          </div>
        ))
      }

      {/* Depth markers every 200m */}
      {/* Depth markers every 200m */}
      {
        depthMarkers.map((depth) => (
          <span class="depth-marker" style={`top: ${depth}px;`}>
            {depth}m
          </span>
        ))
      }

      {/* ML Concepts */}
      {
        mlConcepts.map((concept, index) => (
          <div
            class={`ml-concept ${concept.size}`}
            style={`top: ${concept.depth}px;`}
            data-depth={String(concept.depth)}
            data-name={concept.name}
          >
            <div class="concept-image-container">
              <img
                src={`/src/assets/${concept.image}`}
                alt={concept.name}
                class="concept-image"
                loading={index < 5 ? "eager" : "lazy"}
                decoding="async"
              />
            </div>

            <div class="concept-info">
              <h3>{concept.name}</h3>
              <p>{concept.description}</p>
              <span class="concept-category">{concept.category}</span>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <div class="bg-black min-h-screen text-white p-5">Honorable Mentions @<a href="https://neal.fun/deep-sea/" target="_blank" class="text-blue underline hover:text-blue-500">Neal.Fun</a></div>
</main>

<script>
  // Intersection Observer for lazy loading and animations
  const concepts = document.querySelectorAll<HTMLElement>(".ml-concept");

  const conceptObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("visible");
          // Don't unobserve so animation continues
        }
      });
    },
    {
      threshold: 0.1,
      rootMargin: "100px",
    }
  );

  concepts.forEach((concept) => conceptObserver.observe(concept));

  // Optional: Click to highlight concept
  concepts.forEach((concept) => {
    concept.addEventListener("click", () => {
      const name = concept.dataset.name;
      const depth = concept.dataset.depth;
      console.log(`Clicked: ${name} at ${depth}m`);
      // You can add more interactivity here
    });
  });
</script>
