---
import "../pages/_index.css";
---

<style>
  /* Wave animation: horizontal scroll effect */
  @keyframes wave {
    0% {
      background-position: 0% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  /* Slower wave for layering effect */
  @keyframes wave-slow {
    0% {
      background-position: 0% center;
    }
    125% {
      background-position: 100%;
    }
    100% {
      background-position: 200% center;
    }
  }

  /* Container for wave effect */
  .wave-border {
    position: relative;
    top: -75px;
    overflow: visible;
  }

  /* Wave animation div */
  .wave-border::before {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 100px;
    background-image: url('data:image/svg+xml, <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"><path d="M0,40 Q300,10 600,40 T1200,40 L1200,120 L0,120 Z" fill="%2387ceeb"/></svg>');
    background-repeat: repeat-x;
    background-size: 600px 120px;
    animation: wave-slow 8s linear infinite;
    z-index: 5;
  }
</style>

<main>
  {/* Hero section: gradient background with navigation and title */}
  <section class="bg-linear-to-t from-amber-300 to-orange-900 h-[82vh]">
    {/* Navigation links */}
    <nav class="flex justify-between p-2">
      <a
        href="https://dharuportfolio.netlify.app/"
        target="_blank"
        class=" hover:underline">Nami</a
      >
      <a
        href="https://abinesh-mathivanan.vercel.app/"
        target="_blank"
        class="hover:underline">Beens</a
      >
    </nav>

    {/* Centered title and subtitle */}
    <div class="flex flex-col justify-center items-center pt-[36vh]">
      <h1 class="font-bold text-5xl  ">The Deep Trench</h1>
      <h5 class="p-3 font-medium ">by Beens & Nami</h5>
    </div>
  </section>

  {/* Content section with gradient background */}
  <div class="wave-border"></div>
  <section
    class="min-h-screen"
    style="background: linear-gradient(180deg, #87ceeb 0%, #1e3a8a 50%, #000000 100%);"
  >
  

    
  </section>
  <div class="bg-black min-h-screen"></div>
</main>
